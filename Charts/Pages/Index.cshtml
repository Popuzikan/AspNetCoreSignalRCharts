@page
@using Charts.Services
@model Charts.Pages.Index
@inject Buffer<Point> Buffer


<link rel="stylesheet" href="~/css/index.css" /> @*подключение стилей*@

@{
    Layout = null;
    var x = Buffer;
    var data = Buffer;
}

<!DOCTYPE html>
    
<html lang="en">
<head>
    <title>Silence Web Client</title>
</head>
    <div class="graph-content">
        <div class="col-1-3" id="corrWaveForm1">900 MGz</div>

        <div class="col-2-3" id="corrWaveForm2">1.5 GGz</div>

        <div class="col-3-3" id="corrWaveForm3">2.4 GGz</div>

        <div class="col-3-4" id="corrWaveForm4">5.8 GGz</div>
    </div>

     <script id="data" type="application/json">
    @Json.Serialize(
        new
        {
            x,
            limit = Buffer.MaxCapacity,
            url = "/chart",
        })    
    </script>


<script src="~/lib/plotly/plotly-2.8.3.min.js"></script>
<script src="~/lib/microsoft-signalr/signalr.min.js"></script>
<script src="~/js/WaveForm.js"></script>
